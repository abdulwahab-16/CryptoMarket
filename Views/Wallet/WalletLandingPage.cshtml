@using RealEstate_Mvc_.Dtos
@model WalletResponseModel

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #1e1e1e;
        color: #fff;
        min-height: 100vh;
        margin: 0;
    }

    .wallet-container {
        width: 360px;
        background-color: #2c2c2c;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 50px auto; /* Center horizontally and space from top */
    }

    .wallet-header {
        padding: 16px;
        background-color: #333;
    }

    .wallet-info {
        display: flex;
        flex-direction: column;
    }

    .wallet-title {
        font-size: 1rem;
        font-weight: bold;
    }

    .wallet-status {
        font-size: 0.8rem;
        color: #aaa;
    }

    .wallet-address {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .wallet-address span {
            font-size: 0.9rem;
            background-color: #444;
            padding: 4px 8px;
            border-radius: 8px;
        }

    .copy-button {
        background-color: #555;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 4px 8px;
        cursor: pointer;
        font-size: 0.8rem;
    }

        .copy-button:hover {
            background-color: #777;
        }

    .wallet-navigation {
        display: flex;
        justify-content: space-around;
        background-color: #222;
        border-bottom: 1px solid #444;
    }

    .nav-button {
        background: none;
        border: none;
        color: #aaa;
        padding: 12px 16px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

        .nav-button.active, .nav-button:hover {
            color: #fff;
            border-bottom: 2px solid #ff914d;
        }

    .wallet-content {
        padding: 16px;
        text-align: center;
        background-color: #2c2c2c;
        height: 200px; /* Box for transactions */
        overflow-y: auto; /* Enable scrolling for long transactions */
    }

    .wallet-footer {
        padding: 16px;
        text-align: center;
        background-color: #333;
    }

    .swap-button {
        background-color: #ff914d;
        border: none;
        color: white;
        padding: 12px 24px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9rem;
    }

        .swap-button:hover {
            background-color: #ff6d1a;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Wallet UI</title>
</head>
<body>
    <div class="wallet-container">
        <header class="wallet-header">
            <div class="wallet-info">
                <span class="wallet-title">CryptoMarket.com</span>
                <span class="wallet-status">Connected</span>
            </div>
            <div class="wallet-address">
                <span>@Model.WalletAddress</span>
                <button class="copy-button" onclick="copyToClipboard('@Model.WalletAddress')">📋</button>
            </div>
            <h1>@Model.Balance BTC</h1>
        </header>

        <nav class="wallet-navigation">
            <button class="nav-button active">Transactions</button>
        </nav>

        <div class="wallet-content">
            <p>Transaction details will appear here...</p>
            <!-- Dynamically add transactions here -->
        </div>

        <footer class="wallet-footer">
            <button class="swap-button">Disconnect</button>
        </footer>
    </div>

    <script>
        function copyToClipboard(walletAddress) {
            navigator.clipboard.writeText(walletAddress).then(() => {
                alert("Wallet address copied to clipboard!");
            }).catch((err) => {
                console.error("Failed to copy: ", err);
            });
        }
    </script>
</body>
</html>
