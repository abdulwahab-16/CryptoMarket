@using RealEstateMvc.Models.Enum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Market</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

</head>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .logo-container {
        display: flex;
        align-items: center;
    }

    .logo {
        height: 60px;
        margin-right: 10px;
    }

    .company-name {
        font-weight: bold;
        color: #333;
    }

    .navbar {
        display: contents;
        align-items: center;
    }

        .navbar a {
            margin: 0 15px;
            color: #333;
            text-decoration: none;
            font-weight: 500;
        }

    .search-box {
        display: flex;
        align-items: center;
        margin: 0 15px;
    }

        .search-box input {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 20px 0 0 20px;
            outline: none;
            width: 200px;
        }

        .search-box button {
            padding: 8px 15px;
            border: 1px solid #ccc;
            border-left: none;
            background-color: #fff;
            border-radius: 0 20px 20px 0;
            cursor: pointer;
        }

    .dropdown button {
        background-color: #fff;
        border: none;
        font-weight: 500;
        cursor: pointer;
        margin-right: 15px;
    }

    .list-property {
        background-color: #007BFF;
        color: #fff;
        padding: 10px 20px;
        border-radius: 20px;
        font-weight: 500;
        text-decoration: none;
    }
    nav .navbar
    {
        flex-wrap: inherit;
        display: contents;
    }
</style>

<body>


    <header class="header">
        <div class="logo-container">
            <img src="~/image.jpg" alt="TJ Homeland Logo" class="logo">
            <span class="company-name">Crypto Market</span>
        </div>
        <nav class="navbar">


            <a asp-controller="User" asp-action="Login">Buy</a>
            <a asp-controller="Customer" asp-action="CreateCustomer">Register</a>
            <a asp-controller="User" asp-action="Login">Login</a>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <div class="search-box">
                <input type="text" placeholder="Search...">
                <button asp-controller="User" asp-action="Login">🔍</button>
            </div>
            <div class="dropdown">
                <button>Other services ▼</button>
                <!-- Dropdown content goes here -->
            </div>
        </nav>
    </header>




  
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>









    