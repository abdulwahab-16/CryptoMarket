@using RealEstate_Mvc_.Dtos
@model TransactionRequestModel

@{
    ViewBag.Title = "Create Transaction";
}
<style>
    .container {
        max-width: 500px;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        font-size: 1.5rem;
        letter-spacing: 0.05em;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: scale(1.05);
        }

    .form-control {
        height: 50px;
        font-size: 1rem;
    }

</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center">
                    @ViewBag.Message
                </div>
            }

            <form asp-action="CreateTransfer" asp-controller="Transaction" method="post">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                <input type="hidden" name="Email" value="@Model.Email" />

                <div class="form-group mb-4">
                    <label for="passcode" class="form-label fw-bold">Enter Passcode:</label>
                    <input type="password" id="passcode" name="Passcode" class="form-control rounded-pill shadow-sm" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow">
                        <i class="fas fa-lock"></i> Confirm and Pay
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
