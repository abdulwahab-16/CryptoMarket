@{
    ViewBag.Title = "Delete Customer";
    var message = ViewBag.Message ;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Delete Customer</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-danger" role="alert">
                            @message
                        </div>
                    }
                    <p>Please enter the email address of the customer you wish to delete:</p>
                    <form asp-action="DeleteCustomer" method="post">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a href="@Url.Action("GetAllCustomer")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
