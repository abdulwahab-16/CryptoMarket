@using RealEstate_Mvc_.Dtos

@model CustomerRequestModel;
@if (ViewBag.Message != null)
{
        <div class="alert alert-danger">
        @ViewBag.Message
        </div>
}
<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;

    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh; /* Ensure the container takes up full viewport height */
        position:center;
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px;
        width: 100%;
        max-width: 400px; /* Adjust width to make the login sheet smaller */
    }

    .form-group {
        margin-bottom: 0.75rem; /* Adjust spacing */
    }

    .form-label {
        display: block;
        margin-bottom: 0.25rem; /* Adjust spacing */
        font-weight: bold;
    }

    .form-control {
        width: 97%;
        padding: 0.4rem; /* Adjust padding */
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 0.9rem; /* Adjust font size */
    }

    .btn {
        display: block;
        width: 100%;
        padding: 0.5rem; /* Adjust padding */
        font-size: 0.9rem; /* Adjust font size */
        border: none;
        border-radius: 4px;
        color: #fff;
        background-color: #007bff;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }
</style>
<div class="container d-flex align-items-center justify-content-center">
    <div class="card p-4 shadow-sm w-100" style="max-width: 650px;">
        <h3 class="text-center mb-4">Register</h3>
        <form asp-action="Register" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">FirstName</label>
                <input type="text" class="form-control" placeholder="FirstName" asp-for="FirstName" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">LastName</label>
                <input type="text" class="form-control" placeholder="LastName" asp-for="LastName" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                <input type="tel" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber" />
            </div>
            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input type="number" class="form-control" placeholder="Age" asp-for="Age" />
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" placeholder="1,wall road" asp-for="Address" />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="Password" class="form-control" placeholder="......." asp-for="Password" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" />
            </div>
            <div class="mb-3">
                <label asp-for="PassCode" class="form-label">WalletPassCode</label>
                <input type="Password" class="form-control" placeholder="......." asp-for="PassCode" />
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select class="form-control" asp-for="Gender">
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <br>
            <div class="mb-3">
                <label asp-for="ProfilePicture" class="form-label"></label>
                <input type="file" class="form-control" asp-for="ProfilePicture" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input asp-controller="Customer" asp-action="CreateCustomer" type="submit" value="Submit " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}