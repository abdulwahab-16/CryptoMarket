@using RealEstate_Mvc_.Dtos
@model CategoryRequestModel;
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}
<div class="container d-flex align-items-center justify-content-center">
    <div class="card p-4 shadow-sm w-100" style="max-width: 650px;">
        <h3 class="text-center mb-4">CreateCartegory</h3>
        <form asp-action="CreateCategory" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="Description" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
            </div>
            <div class="d-grid">
                <input asp-controller="Category" asp-action="CreateCategory" type="submit" value="Submit " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
