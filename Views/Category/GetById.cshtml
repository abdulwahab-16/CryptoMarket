@{
}


@{
    ViewData["Title"] = "Search Category by Id";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="GetById" method="get">
        <div class="form-group">
            <label for="categoryName">Enter Category Id:</label>
            <input type="text" class="form-control" id="categoryId" name="Id" placeholder="Enter category Id" required>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info mt-3">
            @ViewBag.Message
        </div>
    }

    @if (Model != null)
    {
        <div class="mt-4">
            <h3>Category Details</h3>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Description:</strong> @Model.Description ?? "No description available."</p>
        </div>
    }
</div>
