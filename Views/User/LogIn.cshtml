@{
}

@model UserLoginRequestModel;

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh; /* Ensure the container takes up full viewport height */
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px;
        width: 100%;
        max-width: 400px; /* Adjust width to make the login sheet smaller */
    }

    .form-group {
        margin-bottom: 0.75rem; /* Adjust spacing */
    }

    .form-label {
        display: block;
        margin-bottom: 0.25rem; /* Adjust spacing */
        font-weight: bold;
    }

    .form-control {
        width: 97%;
        padding: 0.4rem; /* Adjust padding */
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 0.9rem; /* Adjust font size */
    }

    .btn {
        display: block;
        width: 100%;
        padding: 0.5rem; /* Adjust padding */
        font-size: 0.9rem; /* Adjust font size */
        border: none;
        border-radius: 4px;
        color: #fff;
        background-color: #007bff;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }
</style>



@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}
<div class="form-container">
    <div class="card">
        <h3 class="text-center">Login</h3>
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="example@gmail.com" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" placeholder="........" asp-for="Password" />
            </div>
            <div class="form-group">
                <input asp-controller="User" asp-action="Login" type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    // JavaScript to remove the message after 5 seconds (5000 milliseconds)
    setTimeout(function () {
        var messageElement = document.getElementById('loginMessage');
        if (messageElement) {
            messageElement.style.display = 'none';
        }
    }, 50);
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}